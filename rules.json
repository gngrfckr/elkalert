{
    "rules":
        [
            {
                "name":"INFO level alert",
                "index":"qa-ewp-log-apps-*",
                "query":{
                    "bool": {
                        "must": [
                          {
                            "match": {
                              "level": "INFO"
                            }
                          },
                          {
                            "range": {
                              "@timestamp": {
                                "gte": "now-1m",
                                "lte": "now"
                              }
                            }
                          }
                        ]
                      }
                },
                "interval": "1m",
                "alert":{
                  "template": "Message from elk-alert.\n<b>pod</b>: {{_source.kubernetes.pod_name}}\n<b>date</b>: {{_source.@timestamp}}\n<b>message</b>: {{_source.msg}}",
                  "destination":{
                    "to":"telegram",
                    "chatid":"-369418875",
                    "botid":"898968600:AAG1n2O_uE3SdpBhS1xxxB8kYibvs-bmwxE"
                  }
                }
            }
        ]
}

